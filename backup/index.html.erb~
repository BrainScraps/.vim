<div id="map-canvas"></div>


<script type=text/javascript> 
var centerHere = null; 
if (navigator.geolocation) {
     navigator.geolocation.getCurrentPosition(function (position) {
         centerHere = [position.coords.latitude, position.coords.longitude];
         getFoursquare();
     });
 }

var map = L.map('map-canvas').setView(centerHere ? centerHere : [37.812581 , -122.266041], 16);

L.tileLayer('http://{s}.tile.cloudmade.com/78bc66dbe07f4b8593aece9e8864efff/998/256/{z}/{x}/{y}.png', {
    attribution: 'Map data &copy; <a href="http://openstreetmap.org">OpenStreetMap</a> contributors, <a href="http://creativecommons.org/licenses/by-sa/2.0/">CC-BY-SA</a>, Imagery Â© <a href="http://cloudmade.com">CloudMade</a>',
    maxZoom: 18
}).addTo(map);

var foursquareData;

var getFoursquare = function () {
        $.ajax({ 
        url: 'https://api.foursquare.com/v2/venues/explore?client_id=5KLM3FG3UEPBHTLD3P3MLTMBBKAJ3F0ZHXH1TZ3INHRUSAWI&client_secret=JOWG1PKYVBGAERZDJ1A11IFKJRNMB2SKYYAGFACJ1BNH4LOF&v=20140208ll=' + centerHere[0] + ',' + centerHere[1] + '&limit=25', 
        dataType: 'json',
        success: function(data){
          foursquareData = data}
           
        });
};


</script> 

